<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra del logo -->
    <item android:top="4dp" android:left="2dp" android:right="6dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="@color/modernShadow" />
        </shape>
    </item>
    
    <!-- Fondo circular del logo -->
    <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/modernBackgroundSecondary" />
            <stroke 
                android:width="3dp" 
                android:color="@color/modernOrangeLight" />
        </shape>
    </item>
</layer-list>
