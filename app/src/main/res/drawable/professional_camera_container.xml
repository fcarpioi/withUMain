<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra externa suave -->
    <item android:top="6dp" android:left="3dp" android:right="9dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#30000000" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- Sombra media -->
    <item android:top="3dp" android:left="1dp" android:right="6dp" android:bottom="9dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="26dp" />
        </shape>
    </item>

    <!-- Contenedor principal con gradiente -->
    <item android:top="0dp" android:left="0dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF2A2A2A"
                android:endColor="#FF1A1A1A"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="24dp" />
            <stroke
                android:width="2dp"
                android:color="#FF404040" />
        </shape>
    </item>

    <!-- Borde interno brillante -->
    <item android:top="2dp" android:left="2dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#FF606060" />
            <corners android:radius="22dp" />
        </shape>
    </item>
</layer-list>
