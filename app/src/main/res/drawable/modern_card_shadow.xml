<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item android:top="4dp" android:left="2dp" android:right="6dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/modernShadow" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Tarjeta principal -->
    <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/modernBackgroundSecondary" />
            <corners android:radius="16dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/modernGrayLight" />
        </shape>
    </item>
</layer-list>
