<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Esquina inferior izquierda -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- Línea horizontal -->
    <item android:top="36dp" android:left="0dp" android:right="20dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/modernOrange" />
            <corners android:bottomLeftRadius="8dp" />
        </shape>
    </item>
    
    <!-- Línea vertical -->
    <item android:top="20dp" android:left="0dp" android:right="36dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/modernOrange" />
            <corners android:bottomLeftRadius="8dp" />
        </shape>
    </item>
</layer-list>
