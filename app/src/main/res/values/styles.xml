<resources>
   <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Tema de la pantalla de inicio -->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>



    <!-- Base application theme -->
    <style name="Theme.Jerico" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#ec7727</item>
        <item name="colorPrimaryVariant">#ec7727</item>
        <item name="colorOnPrimary">#FFFFFF</item> 
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>

    </style>

    <!-- Tema sin ActionBar -->
    <style name="Theme.Jerico.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#ec7727</item>
        <item name="colorPrimaryVariant">#ec7727</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <!--TicTacToe-->
    <style name="GameButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Puedes ajustar el porcentaje o tamaño fijo -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

        <style name="Theme.MyApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <!-- Personaliza el fondo y el estilo aquí si es necesario -->
            <item name="android:windowBackground">@color/black</item>
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
        </style>




    <!-- Tema moderno para la aplicación -->
    <style name="Theme.Modern" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/modernOrange</item>
        <item name="colorPrimaryVariant">@color/modernOrangeDark</item>
        <item name="colorOnPrimary">@color/modernBackgroundSecondary</item>
        <item name="colorSecondary">@color/modernAccent</item>
        <item name="colorSecondaryVariant">@color/modernOrangeLight</item>
        <item name="colorOnSecondary">@color/modernBackgroundSecondary</item>
        <item name="android:windowBackground">@drawable/modern_gradient_background</item>
        <item name="android:statusBarColor">@color/backgroundColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Estilo para botones modernos -->
    <style name="ModernButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/modern_button_background</item>
        <item name="android:textColor">@color/modernBackgroundSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Estilo para campos de entrada modernos -->
    <style name="ModernEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:background">@drawable/modern_input_background</item>
        <item name="android:textColor">@color/modernTextPrimary</item>
        <item name="android:textColorHint">@color/modernTextSecondary</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

</resources>
